<h1>Listing Customers</h1>

<form>
  <%= form_tag(customers_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Name or Email" %>
  <%= submit_tag "Search" , :name => nil %>
  <% end %>
</form>

<table class="customer-list">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3">Options</th>
    </tr>
  </thead>

  <tbody>

    <% @customers.each do |customer| %>
      <tr>
        <td class="name"><%= customer.name %></td>
        <td class="email"><%= customer.email %></td>
        
       
        <td><%= link_to 'Show', customer %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
        <td><%= link_to 'Delete Customer', customer, method: :delete, data: { confirm: ' Are you sure to delete the customer?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path %>
